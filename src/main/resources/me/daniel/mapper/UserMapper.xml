<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.daniel.mapper.UserMapper">

    <insert id="insertUser" parameterType="UserVO">
        insert into
        user values(
                               nextval('user_seq'),
                    #{userPw},
                    #{userName},
                    #{userPhone},
                    #{userEmail},
                    #{userMainAddress},
                    #{userDetailAddress},
                    #{userZipcode},
                    1,
                    2000
                           )
    </insert>

    <select id="selectUser" resultType="UserVO">
        select * from
        user where user_no = #{userNo}
    </select>

</mapper>
